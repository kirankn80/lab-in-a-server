{% set controller_mip = [] %}
{% set controller_cdip = [] %}
{{ controller_mip.append(primary.mip) }}
{{ controller_cdip.append(primary.ip) }}
provider_config:
  bms:
    ssh_user: root
    ssh_pwd: c0ntrail123
    ntpserver: {{ ntp_server }}
    domainsuffix: local
instances:
  {{ primary.host }}:
    ip: {{ primary.mip }}
    provider: bms
    roles:
      openstack:
      config_database:
      config:
      control:
      analytics_database:
      analytics:
      webui:
{% for control in controls %}
{{ controller_mip.append(control.mip) }}
{{ controller_cdip.append(control.ip) }}
  {{ control.host }}:
    ip: {{ control.mip }}
    provider: bms
    roles:
      openstack:
      config_database:
      config:
      control:
      analytics_database:
      analytics:
      webui:
{% endfor %}
{% for i in range(0, dpdk_computes) %}
  {{ computes[i].host }}:
    ip: {{ computes[i].mip }}
    provider: bms
    roles:
      openstack_compute:
      vrouter:
        PHYSICAL_INTERFACE: eth2
        CPU_CORE_MASK: "0xff"
        DPDK_UIO_DRIVER: uio_pci_generic
        HUGE_PAGES: {{ huge_pages }}
        AGENT_MODE: dpdk
{% endfor %}
{% for i in range(dpdk_computes, computes|length) %}
  {{ computes[i].host }}:
    ip: {{ computes[i].mip }}
    provider: bms
    roles:
      openstack_compute:
      vrouter:
        PHYSICAL_INTERFACE: eth2
{% endfor %}
contrail_configuration:
  LOG_LEVEL: SYS_DEBUG
  CONTRAIL_VERSION: {{ contrail_version }}
  CLOUD_ORCHESTRATOR: openstack
  RABBITMQ_NODE_PORT: 5673
  ENCAP_PRIORITY: VXLAN,MPLSoUDP,MPLSoGRE
  CONTROLLER_NODES: {{ controller_mip|join(',') }}
  CONTROL_NODES: {{ controller_cdip|join(',') }}
  VROUTER_GATEWAY: {{ ctrl_data_gateway }}
  OPENSTACK_VERSION: {{ openstack_version }}
{% if controls|length != 0 %} 
  KEYSTONE_AUTH_HOST: {{ kolla_evip }}
{% endif %}
  AUTH_MODE: keystone
  KEYSTONE_AUTH_URL_VERSION: /v3
kolla_config:
  kolla_globals:
    docker_namespace: kolla
    docker_registry: 10.84.5.85:5010
    contrail_api_interface_address: {{ primary.mip }}
{% if controls|length != 0 %} 
    kolla_internal_vip_address: {{ kolla_evip }}
    kolla_external_vip_address: {{ kolla_evip }}
{% if kvrouter_id is defined %}
    keepalived_virtual_router_id: {{ kvrouter_id }}
{% endif %}
    enable_haproxy: yes
{% else %}
    enable_haproxy: no
{% endif %}
    enable_ironic: no
  kolla_passwords:
    keystone_admin_password: contrail123
  customize:
    nova.conf: |
      [libvirt]
      virt_type=kvm
      cpu_mode=none
